using System;

namespace cZad_7_2
{
class Program
{
static bool isPalindrom(string str)
{
if (str.Length>1)
{
char[] temp = str.ToCharArray();
Array.Reverse(temp);
if (str == new string(temp))
{
return true;
}
}
return false;
}
static void Main(string[] args)
{
try
{
string str;
string[] str2;
string res = String.Empty;
char[] separators = { ' ', ',', '.', '!', '?', ':', ':' };
Console.WriteLine("Введите строку, разделяя слова знаками препинания или пробелом");
str = Console.ReadLine();
str2 = str.Split(separators);
foreach (string s in str2)
{
if (s != null)
{
if (isPalindrom(s))
{
res += s + ' ';
}
}
}
if (res==String.Empty)
{
throw new Exception("Палиндромов не обнаружено!");
}
Console.WriteLine("Найденные палиндромы: {0}", res);
}
catch (Exception exc)
{

Console.WriteLine(exc.Message);
}
}
}
}
