using System;
using System.Collections.Generic;
using System.Text;

namespace ConsoleApplication3_1
{
class Program
{
static void Main(string[] args)
{
Console.WriteLine("Введите размерность массива = ");
Console.Write("n = ");
int n = int.Parse(Console.ReadLine());

int[,] a = InputR(n);
Output(a);
if (Semetr(a))
Console.WriteLine("Симметрична");
else
Console.WriteLine("НЕ симметрична");

Console.ReadKey();
}
static int[,] InputR(int n)
{
int[,] a = new int[n, n];
for (int i = 0; i < n; ++i)
for (int j = 0; j < n; ++j)
{
Console.Write("a[{0},{1}]= ", i, j);
a[i, j] = int.Parse(Console.ReadLine());

}
return a;
}
static void Output(int[,] a)
{
for (int i = 0; i < a.GetLength(0); i++, Console.WriteLine())
for (int j = 0; j < a.GetLength(1); j++)
Console.Write(" " + a[i, j]);
}

/// <returns>Возвращает true если семетрична и false если нет</returns>
static bool Semetr(int[,] a)
{
bool symm = true;
for (int i = 0; i < a.GetLength(0); ++i)
{
for (int j = 0; j < a.GetLength(1); ++j)
if (a[i, j] != a[j, i])
{
symm = false;
break;
}
if (!symm) break;
}
return symm;
}
}
}
